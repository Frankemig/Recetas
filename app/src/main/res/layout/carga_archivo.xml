<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="30dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_pantalla8"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagePDF"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#80000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_pdf"
        app:layout_constraintEnd_toEndOf="@+id/tv_pdf"
        app:layout_constraintStart_toStartOf="@+id/tv_pdf"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buscar_pdf" />

    <ImageView
        android:id="@+id/imagePDFOk"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#80000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_pdf"
        app:layout_constraintEnd_toEndOf="@+id/tv_pdf"
        app:layout_constraintStart_toStartOf="@+id/tv_pdf"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pdf_ok" />

    <ImageView
        android:id="@+id/cancelarPDF"
        android:layout_margin="3dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintEnd_toEndOf="@+id/imagePDFOk"
        app:layout_constraintTop_toTopOf="@+id/imagePDFOk" />

    <TextView
        android:gravity="center"
        android:id="@+id/tv_pdf"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:background="@drawable/ic_btn2"
        android:text="Cargar PDF"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
            android:id="@+id/imageVideoOk"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="#80000000"
            app:layout_constraintBottom_toTopOf="@+id/btn_pdf"
            app:layout_constraintEnd_toEndOf="@+id/btn_pdf"
            app:layout_constraintStart_toStartOf="@+id/btn_pdf"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/buscar_video" />

        <ImageView
            android:id="@+id/imageVideo"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="#80000000"
            app:layout_constraintBottom_toTopOf="@+id/btn_pdf"
            app:layout_constraintEnd_toEndOf="@+id/btn_pdf"
            app:layout_constraintStart_toStartOf="@+id/btn_pdf"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/video_ok" />

        <ImageView
            android:id="@+id/cancelarVideo"
            android:layout_margin="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="@+id/imageVideoOk"
            app:layout_constraintTop_toTopOf="@+id/imageVideoOk" />

        <TextView
            android:gravity="center"
            android:id="@+id/btn_pdf"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:background="@drawable/ic_btn2"
            android:text="Cargar PDF"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageDocOk"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="#80000000"
            app:layout_constraintBottom_toTopOf="@+id/tv_doc"
            app:layout_constraintEnd_toEndOf="@+id/tv_doc"
            app:layout_constraintStart_toStartOf="@+id/tv_doc"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/buscar_word" />

        <ImageView
            android:id="@+id/imageDoc"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="#80000000"
            app:layout_constraintBottom_toTopOf="@+id/tv_doc"
            app:layout_constraintEnd_toEndOf="@+id/tv_doc"
            app:layout_constraintStart_toStartOf="@+id/tv_doc"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/word_ok" />

        <ImageView
            android:id="@+id/cancelarDoc"
            android:layout_margin="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="@+id/imageDocOk"
            app:layout_constraintTop_toTopOf="@+id/imageDocOk" />

        <TextView
            android:gravity="center"
            android:id="@+id/tv_doc"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="30dp"
            android:background="@drawable/ic_btn2"
            android:text="Cargar PDF"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>