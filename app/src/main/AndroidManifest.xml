<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recetas">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.example.recetas.MainActivity"
            android:theme="@style/Theme.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.recetas.EditCocina"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.example.recetas.EditCocteleria"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.example.recetas.EditPostres"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.example.recetas.RecetaDetail"
            android:theme="@style/Theme.DetailActivity" />
        <activity
            android:name="com.example.recetas.AddCocina"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.example.recetas.AddCocteleria"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.example.recetas.AddPostres"
            android:theme="@style/Theme.FormActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.AppCompat">

        </activity>

    </application>

</manifest>